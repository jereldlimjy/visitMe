<%- layout('layouts/boilerplate')  %>

<style>
body {
  background-image: url('https://png.pngtree.com/thumb_back/fh260/back_our/20190628/ourmid/pngtree-light-blue-background-image_264178.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>

<div class="row">
	<div class="col-6 offset-3">
		<form action="/form" method="POST">
		  <div class="mb-3">
		    <label for="username" class="form-label">Username to add</label>
		    <input type="text" class="form-control" id="username" aria-describedby="username1" name="visit[host]">
		    <div id="username1" class="form-text">Do ensure this is the correct username!</div>
		  </div>
		  <div class="mb-3">
		    <label for="startTime" class="form-label">Start Time</label>
		    <input type="datetime-local" class="form-control" id="startTime" name="visit[startTime]">
		  </div>
		  <div class="mb-3">
		    <label for="endTime" class="form-label">End Time</label>
		    <input type="datetime-local" class="form-control" id="endTime" name="visit[endTime]">
		  </div>
		  <div class="mb-3">
		  	<label class="form-text" for="details">Details</label>
		    <textarea class="form-control" id="exampleCheck1" rows="3" name="visit[details]"></textarea> 
		  </div>
		  <button type="submit" class="btn btn-success">Submit</button>
		</form>
	</div>
</div>